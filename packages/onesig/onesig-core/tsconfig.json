{
    "extends": "@layerzerolabs/typescript-configuration/tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "jsx": "react-jsx"
    },
    "exclude": [
        "node_modules",
        "**/__mocks__/*",
        "**/__tests__/*",
        "**/*.spec.ts",
        "**/*.test.ts",
        "dist"
    ],
    "include": ["src/**/*", "tests/index.test.ts"]
}
