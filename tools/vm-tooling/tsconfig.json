{
    "extends": "@layerzerolabs/typescript-configuration/tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "noUncheckedIndexedAccess": true,
        "jsx": "react-jsx",
        "module": "ES2022"
    },
    "exclude": [
        "node_modules",
        "**/__mocks__/*",
        "**/__tests__/*",
        "**/*.spec.ts",
        "**/*.test.ts",
        "dist"
    ],
    "include": ["src/**/*"]
}
