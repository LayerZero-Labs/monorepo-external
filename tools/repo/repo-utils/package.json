{
    "name": "@layerzerolabs/repo-utils",
    "version": "0.0.0",
    "private": false,
    "license": "MIT",
    "type": "module",
    "exports": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.cjs",
        "import": "./dist/index.js",
        "default": "./dist/index.cjs"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "workspace-watch": "./dist/workspace-watch.js"
    },
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "tsup",
        "lint": "eslint . --max-warnings 0 || (eslint . --fix --max-warnings 0 && false)",
        "test": "vitest --run --pass-with-no-tests --typecheck",
        "watch": "tsx src/workspace-watch.ts"
    },
    "dependencies": {
        "@layerzerolabs/common-node-utils": "workspace:*",
        "chokidar": "catalog:",
        "ignore": "catalog:"
    },
    "devDependencies": {
        "@layerzerolabs/tsup-configuration": "workspace:*",
        "@layerzerolabs/typescript-configuration": "workspace:*",
        "tsup": "catalog:"
    },
    "publishConfig": {
        "access": "restricted",
        "registry": "https://registry.npmjs.org/"
    }
}
