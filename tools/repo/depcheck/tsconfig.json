{
    "extends": "@layerzerolabs/typescript-configuration/tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "module": "ES2022",
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "exclude": [
        "node_modules",
        "**/__mocks__/*",
        "**/__tests__/*",
        "**/*.spec.ts",
        "**/*.test.ts",
        "dist"
    ],
    "include": ["src/**/*"]
}
